<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Courses</h3>
  </div>
  <div class="panel-body">
    <%= button_to 'New Course', new_program_year_course_path(@program, @year), method: :get, class: 'btn btn-xs btn-primary movedown20 moveright5' %>

    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Course Number</th>
          <th>Course Title</th>
          <th>Total Hours</th>
          <th>Recommended Credits</th>
          <th>Term(s) Offered</th>
          <th>New?</th>
          <th>Language(s) of Instruction</th>
        </tr>
      </thead>

      <tbody>
        <% @courses.each do |course| %>
          <tr id="course_<%= course.id %>">
            <td><%= best_in_place course, :course_number, :url => program_year_course_path(@program.id, @year.id, course), place_holder: '<em>Course Number</em>' %></td>
            <td><%= best_in_place course, :course_title, :url => program_year_course_path(@program.id, @year.id, course), place_holder: '<em>Title</em>' %></td>
            <td><%= best_in_place course, :course_hours, :url => program_year_course_path(@program.id, @year.id, course), place_holder: '<em>Hours</em>'  %></td>
            <td><%= best_in_place course, :course_credits, :url => program_year_course_path(@program.id, @year.id, course), place_holder: '<em>Credits</em>'  %></td>
            <td><%= best_in_place course, :term, :url => program_year_course_path(@program.id, @year.id, course), place_holder: '<em>Term</em>' %></td>
            <td><%= best_in_place course, :new_course, :type => :checkbox, :url => program_year_course_path(@program.id, @year.id, course), place_holder: '<em>(Y/N)</em>' %></td>
            <td><%= best_in_place course, :language, :url => program_year_course_path(@program.id, @year.id, course), place_holder: '<em>Language</em>'  %></td>
            <td><%= link_to 'Delete', program_year_course_path(@program.id, @year.id, course), method: :delete, data: { confirm: 'Delete course?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
